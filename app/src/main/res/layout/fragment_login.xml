<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:textStyle="normal"
                android:id="@+id/etUserName"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:hint="Email / Username"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_mail_app"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:textStyle="normal"
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_app_lock"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp" />



            <LinearLayout
                android:id="@+id/llLogin"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:elevation="18dp"
                android:background="@drawable/corner_radius_white_12"
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textColor="@color/mainColorPrimary"
                    android:text="Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_red"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>


        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
